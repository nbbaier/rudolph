{
	"name": "rudolph-monorepo",
	"version": "0.1.0",
	"description": "Advent of Code CLI - monorepo containing rudolph CLI and create-rudolph scaffolding tool",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter '*' build",
		"dev": "bun run --filter rudolph dev",
		"test": "bun run --filter '*' test",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format .",
		"format:fix": "biome format . --write",
		"typecheck": "bun run --filter '*' typecheck",
		"publish:cli:next": "npm publish --workspace packages/rudolph --tag next",
		"publish:create:next": "npm publish --workspace packages/create-rudolph --tag next",
		"publish:next": "npm publish --workspace packages/rudolph --tag next && npm publish --workspace packages/create-rudolph --tag next"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"typescript": "^5.9.3"
	},
	"engines": {
		"bun": ">=1.3.3",
		"node": ">=18"
	}
}
